<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", organization_project_task_path(@organization, @project, task) %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_organization_project_task_path %> |
<%= link_to "back to project", organization_project_path(@organization, @project) %>

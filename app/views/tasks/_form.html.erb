  </div>

  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_field :url %>
  </div>

  <div>
    <%= form.label :id_task, style: "display: block" %>
    <%= form.text_field :id_task %>
  </div>

  <div>
    <%= form.label :created, style: "display: block" %>
    <%= form.datetime_field :created %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.label :priority, style: "display: block" %>
    <%= form.text_field :priority %>
  </div>

  <div>
    <%= form.label :created_by, style: "display: block" %>
    <%= form.text_field :created_by %>
  </div>

  <div>
    <%= form.label :resolution, style: "display: block" %>
    <%= form.date_field :resolution %>
  </div>

  <div>
    <%= form.submit %>
  </div>
